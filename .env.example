# AI Yield Agent - Environment Configuration

# =============================================================================
# REQUIRED API KEYS (Get these for full functionality)
# =============================================================================

# Pimlico Bundler (Required for ERC-4337 transactions)
# Get from: https://pimlico.io
BUNDLER_URL=https://api.pimlico.io/v2/monad-testnet/rpc?apikey=YOUR_PIMLICO_API_KEY

# MetaMask Project ID (Required for wallet connection)
# Get from: https://developer.metamask.io
METAMASK_PROJECT_ID=your_metamask_project_id

# OpenAI API Key (Optional - for enhanced AI decisions)
# Get from: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key

# Farcaster API (Optional - for social notifications)
# Get from: https://neynar.com
FARCASTER_API_KEY=your_farcaster_api_key
FARCASTER_SIGNER_UUID=your_signer_uuid

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Monad Testnet Configuration
MONAD_RPC_URL=https://testnet-rpc.monad.xyz
CHAIN_ID=41454

# Smart Account Configuration
SMART_ACCOUNT_FACTORY=0x4e1DCf7AD4e460CfD30791CCC4F9c8a4f820ec67
AI_AGENT_PRIVATE_KEY=your_ai_agent_private_key

# =============================================================================
# ENVIO INTEGRATION
# =============================================================================

# Envio HyperSync and GraphQL endpoints
ENVIO_HYPERSYNC_URL=https://monad-testnet.hypersync.xyz
ENVIO_GRAPHQL_URL=https://indexer.bigdevenergy.link/41454/v1/graphql

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Optional - uses mock data if not configured)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_yield_agent

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# AI Decision Thresholds
CONFIDENCE_THRESHOLD=0.8
MIN_APY_IMPROVEMENT=0.5
MAX_RISK_INCREASE=0.2
GAS_COST_THRESHOLD=50

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Service URLs
BACKEND_URL=http://localhost:3002
FRONTEND_URL=http://localhost:3000
AI_AGENT_URL=http://localhost:3003

# Farcaster Mini App
FARCASTER_APP_URL=https://ai-yield-agent.vercel.app

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Mock Data (set to true for demo without real APIs)
USE_MOCK_DATA=true
DEMO_MODE=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret (for API authentication)
JWT_SECRET=your_jwt_secret_key

# Webhook Signatures
ENVIO_WEBHOOK_SECRET=your_envio_webhook_secret
FARCASTER_WEBHOOK_SECRET=your_farcaster_webhook_secret